<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#58709F"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_insertarp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#4CAF50"
        android:onClick="nuevoProveedor"
        android:text="@string/nuevo_proveedor"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_borrarp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#4CAF50"
        android:onClick="borrarProveedor"
        android:text="@string/borrar_proveedo"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/bt_insertarp"
        app:layout_constraintStart_toStartOf="@+id/bt_insertarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_insertarp" />

    <Button
        android:id="@+id/bt_actualizarp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#4CAF50"
        android:onClick="actualizarProveedor"
        android:text="@string/actualizar_proveedo"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/bt_borrarp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_borrarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_borrarp" />

    <Button
        android:id="@+id/bt_mostrarMedicamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#4CAF50"
        android:onClick="mostrar_medicamentos"
        android:text="@string/mostrar_medicamentos"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/bt_actualizarp"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/bt_actualizarp"
        app:layout_constraintTop_toBottomOf="@+id/bt_actualizarp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="156dp"
        android:layout_height="115dp"
        android:layout_marginTop="84dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="@+id/bt_mostrarMedicamentos"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="@+id/bt_mostrarMedicamentos"
        app:layout_constraintTop_toBottomOf="@+id/bt_mostrarMedicamentos"
        app:srcCompat="@drawable/farmaandroid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="208dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="FarmaCumplido"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>